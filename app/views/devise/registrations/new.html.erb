<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="circle c1 img-circle ortala">
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                      <%= devise_error_messages! %>
                    
                      <div class="form-group">
                        <%= f.text_field :name,class:"form-control",placeholder:"İsminiz" %>
                      </div>
                    
                      <div class="form-group">
                        <%= f.email_field :email, autofocus: true,class:"form-control",placeholder:"Email Adresiniz" %>
                      </div>
                    
                      <div class="form-group">
                        <%= f.password_field :password, autocomplete: "off",class:"form-control",placeholder:"Şifre" %>
                      </div>
                    
                      <div class="form-group">
                        <%= f.password_field :password_confirmation, autocomplete: "off",class:"form-control",placeholder:"Şifre Tekrar" %>
                      </div>
                    
                      <div class="form-group">
                        <%= f.file_field :image,class:"form-control",placeholder:"Bir Profil Resmi" %>
                      </div>
                      <div class="form-group">
                        <%= f.submit "Kayıt",class:"form-control btn btn-primary",placeholder:"İsminiz" %>
                      </div>
                    <% end %>
                    <%= render "devise/shared/links" %>
                    <br/>
                    <br/>
            </div>
        </div>
    </div>
</div>